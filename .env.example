APP_NAME=PMRU
APP_ENV=local
APP_KEY=base64:GENERATE_THIS_KEY
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ======================
# Default / Auth Module DB (AWS RDS or local)
# ======================
DB_CONNECTION=mysql_auth
DB_HOST=your-auth-rds-endpoint.region.rds.amazonaws.com
DB_PORT=3306
DB_DATABASE=school_auth_db
DB_USERNAME=admin
DB_PASSWORD=your_password

# Auth connection (explicit; falls back to DB_* above if not set)
DB_AUTH_HOST=
DB_AUTH_PORT=3306
DB_AUTH_DATABASE=school_auth_db
DB_AUTH_USERNAME=
DB_AUTH_PASSWORD=

# ======================
# Students Module DB (AWS RDS Cluster 2 or local)
# ======================
DB_STUDENTS_HOST=your-students-rds-endpoint.region.rds.amazonaws.com
DB_STUDENTS_PORT=3306
DB_STUDENTS_DATABASE=school_students_db
DB_STUDENTS_USERNAME=admin
DB_STUDENTS_PASSWORD=your_password

# ======================
# Finance / Exams Module DB (AWS RDS Cluster 3 or local)
# ======================
DB_FINANCE_HOST=your-finance-rds-endpoint.region.rds.amazonaws.com
DB_FINANCE_PORT=3306
DB_FINANCE_DATABASE=school_finance_exams_db
DB_FINANCE_USERNAME=admin
DB_FINANCE_PASSWORD=your_password

# ======================
# Academics Module DB (AWS RDS Cluster 4 or local)
# ======================
DB_ACADEMICS_HOST=your-academics-rds-endpoint.region.rds.amazonaws.com
DB_ACADEMICS_PORT=3306
DB_ACADEMICS_DATABASE=school_academics_db
DB_ACADEMICS_USERNAME=admin
DB_ACADEMICS_PASSWORD=your_password

# Optional: SSL for MySQL (e.g. AWS RDS). Path to CA certificate PEM file.
# MYSQL_ATTR_SSL_CA=/path/to/rds-ca.pem

# ======================
# Session & Cache
# ======================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=database

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# ======================
# Redis & Memcached
# ======================
MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ======================
# Mail
# ======================
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ======================
# AWS S3
# ======================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ======================
# Vite
# ======================
VITE_APP_NAME="${APP_NAME}"